<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:padding="@dimen/card_margin"
    tools:context=".LiveCardService">


    <TextView
        android:id="@+id/cryptoName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="BTC"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/cryptoName">

        <TextView
            android:id="@+id/bottomPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="X"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/textDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textUpdate"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/bottomPrice"
            android:gravity="right"
            android:text="X"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/bottomPrice"
            android:gravity="right"
            android:text="X"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="40px"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40px"
            android:layout_height="40px"
            android:src="@drawable/ic_launcher_bitcoin" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="fill_parent"
            android:layout_height="40px"
            android:layout_toLeftOf="@+id/time"
            android:layout_toRightOf="@+id/icon"
            android:text="time stamp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:layout_alignParentEnd="true"
            android:text="now" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/chart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/cryptoName"
        android:layout_marginBottom="-20dp"
        android:layout_marginLeft="-20dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/chartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cryptoName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:text="24h"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/noInternetConnection"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/background_dark"
        android:gravity="center"
        android:text="No Internet Connection."
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible" />


</RelativeLayout>
