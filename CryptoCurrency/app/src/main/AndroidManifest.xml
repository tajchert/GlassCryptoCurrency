<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.tajchert.glass.cryptocurrency" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name="pl.tajchert.glass.cryptocurrency.LiveCardService"
            android:icon="@drawable/ic_glass_logo"
            android:label="@string/title_activity_live_card_service" >
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>

            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/voice_trigger" />
        </service>

        <activity
            android:name="pl.tajchert.glass.cryptocurrency.LiveCardMenuActivity"
            android:theme="@style/MenuTheme" />
    </application>

</manifest>
